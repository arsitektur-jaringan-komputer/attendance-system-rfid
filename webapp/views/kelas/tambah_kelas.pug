extends ../layout

block content
    .container
        p Tambah Kelas
        if errors
            ul
            each val in errors
                li(class="alert alert-danger")= val.msg
        else if complete
            li(class="alert alert-success")= 'Sukses ditambahkan'
        form(method="POST", action="/kelas/tambah" class="form-group")
            input(type="text", name="nama", placeholder="Nama Kelas", class="form-control")
            br
            button(type="submit" class="btn btn-primary") tambah