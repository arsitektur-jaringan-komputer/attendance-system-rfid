doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
		<link href="https://getbootstrap.com/docs/4.1/examples/starter-template/starter-template.css" rel="stylesheet">
	body
		nav(class="navbar navbar-expand-md navbar-dark bg-dark fixed-top")
			a(
			class="navbar-brand",
			href="/"
			)="Attendance System"

			div(
			class="collapse navbar-collapse",
			id="navbarsExampleDefault"
			)
				if isAuthenticated
					ul(class="navbar-nav mr-auto")
						li(class="nav-item active")
						a(class="nav-link", href="/mahasiswa")="Mahasiswa"
						li(class="nav-item active")
						a(class="nav-link", href="/kelas")="Kelas"
						li(class="nav-item active")
						a(class="nav-link", href="/attendance")="Attendance"
			if isAuthenticated
				a(class="nav-link", href="/profile", style="float: left") Profile
				a(class="nav-link", href="/logout", style="float: right") logout
			else
				a(class="nav-link", href="/login", style="float: right") Login
				a(class="nav-link", href="/register", style="float: right") Register

	block content
