extends ../layout

block content
    .container
        p Tambah Mahasiswa
        if errors
            ul
            each val in errors
                li(class="alert alert-danger")= val.msg
        else if complete
            li(class="alert alert-success")= 'Sukses ditambahkan'
        form(method="POST", action="/mahasiswa/tambah" class="form-group")
            input(type="text", name="nrp", placeholder="05111X4000XXXX", class="form-control")
            br
            input(type="text", name="nama", placeholder="Nama Lengkap", class="form-control")
            br
            input(type="year", name="angkatan", placeholder="angkatan", class="form-control")
            br
            button(type="submit" class="btn btn-primary") tambah
